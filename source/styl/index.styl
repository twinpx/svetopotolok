body
  background-color #2f2e2e
  color #666666
  font-size 11pt
  
.b-container
  width 1366px
  margin 0 auto
  position relative
  height 100vh
  
#indexPage
  width 100vw
  height 100vh
  background-repeat no-repeat
  background-position center
  background-size cover
  position relative
  overflow hidden
  
#indexPhoto
  position absolute
  top 130px
  left 288px
  width 950px
  height auto
  -webkit-animation flicker-in-1 2s linear both
  -moz-animation flicker-in-1 2s linear both
  animation flicker-in-1 2s linear both
  box-shadow 0 0 150px rgba( 255, 255, 255, 0.05 )
  
#indexLine
  border-top 1px solid rgba( 255, 255, 255, 0.4 )
  position absolute
  top 450px
  left 127px
  width 1100px
  -webkit-animation slide-left 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 2s both
  -moz-animation slide-left 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 2s both
  animation slide-left 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 2s both
  transform translateX(200%)
  
#indexIll
  position absolute
  top 230px
  left 127px
  width 445px
  -webkit-animation slide-left-ill 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 2.5s both
  -moz-animation slide-left-ill 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 2.5s both
  animation slide-left-ill 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 2.5s both
  transform translateX(-100%)
  opacity 0
    
#indexIllImg
  padding-top 100%
  background-repeat no-repeat
  background-position center
  background-size cover

#indexTitle
  color #fff
  font-size 23pt
  position absolute
  top 21%
  left 65px
  font-family "univia-pro", serif
  opacity 0
  -webkit-animation show-title 1s cubic-bezier(0.250, 0.460, 0.450, 0.940) 3s both
  -moz-animation show-title 1s cubic-bezier(0.250, 0.460, 0.450, 0.940) 3s both
  animation show-title 1s cubic-bezier(0.250, 0.460, 0.450, 0.940) 3s both
  
  
#indexSlogan
  color #fff
  font-size 14pt
  position absolute
  top 71%
  left 65px
  opacity 0
  -webkit-animation show-title 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 3.5s both
  -moz-animation show-title 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 3.5s both
  animation show-title 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) 3.5s both

#indexLogo
  width 280px
  margin 0 auto
  display block
  
header
  margin-top 20px
  color #fff
  
  b
    font-weight normal
    text-transform uppercase
    color #999
    
  .col-xs-2,
  .col-xs-4
    margin-top 33px
  
footer
  position absolute
  bottom 65px
  left 0
  width 100%
  
a
  color #fff
  
  &:hover,
  &:active,
  &:focus
    color #fff
    text-decoration underline